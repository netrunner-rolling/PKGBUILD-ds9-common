pkgname=firefox-extension-ant-video-downloader
pkgver=3.0.15
pkgrel=1
pkgdesc='Download videos with a single click on the Ant Video Downloader icon in your toolbar.'
url=https://www.ant.com/video-downloader
arch=('any')
license=('GPL3')
source=("https://addons.mozilla.org/firefox/downloads/file/785406/ant_video_downloader-3.0.15-an+fx-linux.xpi")
noextract=("${source##*/}")
sha512sums=('292f935cd4169407e8bae1ee2b288d8d1a46f49f6bc105babddc35f5a3bf90b02c0aef8e349290ebf65d459834bdf023a4d7137e2a69c7822521e4405508b058')

package() {
  install -Dm644 "${source##*/}" "$pkgdir"/usr/lib/firefox/distribution/extensions/anttoolbar@ant.com.xpi
}

