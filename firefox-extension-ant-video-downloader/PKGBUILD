pkgname=firefox-extension-ant-video-downloader
pkgver=2.4.7.50
pkgrel=1
pkgdesc='Download videos with a single click on the Ant Video Downloader icon in your toolbar.'
url=https://www.ant.com/video-downloader
arch=('any')
license=('GPL3')
source=("https://addons.mozilla.org/firefox/downloads/latest/8174/addon-8174-latest.xpi")
noextract=("${source##*/}")
sha512sums=('a34145e866608d4f547b3dbf0bdcfa1c86debc080c8025c71489a360c6ec382077d761dce7f0adb8be10de097485a6e1a8f508c13fde01f367fb61b5b58a6ea5')

package() {
  install -Dm644 "${source##*/}" "$pkgdir"/usr/lib/firefox/browser/extensions/anttoolbar@ant.com.xpi
}

